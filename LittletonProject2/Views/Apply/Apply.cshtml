@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/Scripts/jquery-ui.min-1.11.1.js")
@Scripts.Render("~/Scripts/knockout.js")
@Scripts.Render("~/Scripts/tabcontent.js")
@Scripts.Render("~/ViewModels/ApplyViewModel.js")
@Scripts.Render("~/ViewControllers/Apply.js")
@Styles.Render("~/Content/tabcontent.css")
@Styles.Render("~/Content/Apply.css")
@Styles.Render("~/Content/jquery-ui.min.css")
@Styles.Render("~/Content/jquery-ui.theme.min.css")
@Styles.Render("~/Content/jquery-ui.structure.min.css")

<ul class="tabs">
    <li><a href="#view1">Personal Info</a></li>
    <li><a href="#view2">Employment Info</a></li>
    <li><a href="#view3">Work Experience</a></li>
    <li><a href="#view4">References</a></li>
    <li><a href="#view5">Education</a></li>
</ul>
<div class="tabcontents">
    <!-- Personal Info -->
    <div id="view1">
        <div class="contianer-fluid center">
            <div class="row">
                <div class="col-xs-3">
                    <label for="firstName">First Name</label>
                </div>
                <div class="col-xs-3">
                    <label for="lastName">Last Name</label>
                </div>
                <div class="col-xs-2">
                    <label for="over18">Over 18?</label>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3">
                    <input type="text" id="firstName" />
                </div>
                <div class="col-xs-3">
                    <input type="text" id="lastName" />
                </div>
                <div class="col-xs-2">
                    <input type="checkbox" id="over18" />
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3">
                    <label for="streetAddress">Street Address</label>
                </div>
                <div class="col-xs-3">
                    <label for="City">City</label>
                </div>
                <div class="col-xs-2">
                    <label for="State">State</label>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3">
                    <input type="text" id="streetAddress" />
                </div>
                <div class="col-xs-3">
                    <input type="text" id="City" />
                </div>
                <div class="col-xs-2">
                    <select id="State" data-bind="options: listOfStates"></select>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3">
                    <label for="mobilePhone">Mobile Phone</label>
                </div>
                <div class="col-xs-3">
                    <label for="homePhone">Home Phone</label>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3">
                    <input type="text" id="mobilePhone" />
                </div>
                <div class="col-xs-3">
                    <input type="text" id="homePhone" />
                </div>
            </div>
        </div>
    </div>
    <!-- Employment Info -->
    <div id="view2">
        content 2
    </div>
    <!-- Work Experience -->
    <div id="view3">
        <div class="contianer-fluid center">
            <div class="row">
                <div class="col-xs-2">
                    <label for="workExpArea">Work Experience</label>
                </div>
                <div class="col-xs-2">
                    <input type="button" id="addWorkExp" value="Add Employer" />
                </div>
            </div>

            <input type="text" id="yearsInMilitary" />
            <input type="text" id="militaryBranch" />
            <input type="checkbox" id="militaryService" />
        </div>
    </div>
    <!-- References -->
    <div id="view4">
        <div class="row">
            <div class="col-xs-2">
                <label for="workExpArea">References</label>
            </div>
            <div class="col-xs-2">
                <input type="button" id="addReference" value="Add Reference" />
            </div>
        </div>
        <div id="employeeReferencesArea" class="row hidden">
            <input type="text" class="referenceName" />
            <input type="text" class="referenceTitle" />
            <input type="text" class="referenceCompany" />
            <input type="text" class="referenceStreetAddress" />
            <input type="text" class="referenceCity" />
            <select class="referenceState" data-bind="options: listOfStates"></select>
            <input type="text" class="referencePhone" />
            <input type="text" class="referenceEmail" />
        </div>
    </div>
    <!-- Education -->
    <div id="view5">
    </div>
</div>
<input type="button" id="submit" value="Submit" />


<!-- Add Work Exp Modal -->
<div id="addWorkExpModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="model-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> × </button>
            </div>
            <div class="modal-body">
                <div class="contianer-fluid center">
                    <div class="row">
                        <div class="col-xs-4">
                            <label>Employer Name</label>
                        </div>
                        <div class="col-xs-4">
                            <label>Employer Email</label>
                        </div>
                        <div class="col-xs-4">
                            <label>May we contact this employer?</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <input type="text" id="employerName" />
                        </div>
                        <div class="col-xs-4">
                            <input type="text" id="employerEmail" />
                        </div>
                        <div class="col-xs-4">
                            <input type="checkbox" id="employerCanContact" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-4">
                            <label for="employerStreet">Employer Street</label>
                        </div>
                        <div class="col-xs-4">
                            <label for="employerCity">Employer City</label>
                        </div>
                        <div class="col-xs-4">
                            <label for="employerState">Employer State</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <input type="text" id="employerStreet" />
                        </div>
                        <div class="col-xs-4">
                            <input type="text" id="employerCity" />
                        </div>
                        <div class="col-xs-4">
                            <select id="employerState" data-bind="options: listOfStates"></select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-4">
                            <label for="employerLastBoss">Previous Boss</label>
                        </div>
                        <div class="col-xs-4">
                            <label for="employerPhone">Employer Phone</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <input type="text" id="employerLastBoss" />
                        </div>
                        <div class="col-xs-4">
                            <input type="text" id="employerPhone" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-4">
                            <label for="employerStartDate">Start Date</label>
                        </div>
                        <div class="col-xs-4">
                            <label for="employerEndDate">End Date</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <input type="text" id="employerStartDate" class="datepicker" />
                        </div>
                        <div class="col-xs-4">
                            <input type="text" id="employerEndDate" class="datepicker" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-4">
                            <label for="employerDuties">Duties and Responsibilities</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <textarea id="employerDuties" style="resize: none"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                <button class="btn" data-dismiss="modal" aria-hidden="true" id="saveWorkExp">Save</button>
            </div>
        </div>
    </div>
</div>